<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Details:</strong>
  <%= @event.details %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>User:</strong>
  <%= @event.user.username %>
</p>

<p>
  <% if @event.category == true %>
  <strong>Category: Paid</strong>
  <% else %>
  <strong>Category: Free</strong>
  <% end %>
</p>
<% if @event.user == current_user %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>
